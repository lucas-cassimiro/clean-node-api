{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@test/*": [
        "./test/*"
      ]
    },
    "rootDirs": [
      "./src",
      "./test"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "jest.config.js",
    "jest-integration-config.js",
    "jest-unit-config.js",
    "jest-mongodb-config.js"
  ],
  "exclude": [
    "./node_modules",
    "dist",
    "coverage"
  ]
}